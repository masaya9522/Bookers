<body>

<div class="message">
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<table>

 <thead>
  <tr>
    <th><h4><b>Title</b></h4></th>
    <th><h4>Body</h4></th>
    <th></th>
  </tr>
 </thead>

<tbody>

<% @books.each do |book| %>


  <tr>
    <td><span><%= book.title %></span></td>
    <td><span><%= book.body %></span></td>
    <td><a><%= link_to "Show", book_path(book.id) %></a></td>
    <td><a><%= link_to "Edit", edit_book_path(book.id) %></a></td>
    <td><a><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></a></td>
  </tr>
 <% end %>

</tbody>

</table>

<h1 class="title">New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <div class="button">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>

</body>